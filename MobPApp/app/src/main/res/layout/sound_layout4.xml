<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soundgame"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="172dp"
            android:layout_height="244dp"
            android:scaleType="fitXY"
            android:background="#0000"
            app:srcCompat="@drawable/birdicon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/sound4incorrect1" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="234dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/parroticon"
            android:id="@+id/sound4correct" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="244dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/cardinalicon"
            android:id="@+id/sound4incorrect2" />

        <ImageButton
            android:layout_width="182dp"
            android:layout_height="244dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/turkeyicon"
            android:id="@+id/sound4incorrect3" />
    </LinearLayout>
</LinearLayout>