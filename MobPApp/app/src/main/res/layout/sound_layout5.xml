<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soundgame"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="182dp"
            android:layout_height="190dp"
            android:scaleType="fitXY"
            android:background="#0000"
            app:srcCompat="@drawable/turtleicon"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/sound5incorrect3" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="234dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/rabbiticon"
            android:id="@+id/sound5incorrect2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="244dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/dachshundicon"
            android:id="@+id/sound5correct" />

        <ImageButton
            android:layout_width="182dp"
            android:layout_height="244dp"
            android:scaleType="fitXY"
            android:background="#0000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/cardinalicon"
            android:id="@+id/sound5incorrect1" />
    </LinearLayout>
</LinearLayout>