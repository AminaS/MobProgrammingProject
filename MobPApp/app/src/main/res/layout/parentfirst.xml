<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parentsmenu">

    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp">
    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/parentsfood"
        android:id="@+id/imageButton"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"/>

        <TextView
            android:text="Food Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ftext"
            android:layout_marginTop="16dp"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:textSize="20dp"
            android:textColor="#ffe6ff"
            android:textStyle="bold"
            />

        <TextView
            android:text="4/5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodresult"
            android:textSize="50dp"
            android:textColor="#ffb3d1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:visibility="invisible"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:id="@+id/proba" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp">
    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/parentsshadow"
        android:id="@+id/imageButton1"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

        <TextView
            android:text="Shadow Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:layout_marginTop="14dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toRightOf="@+id/imageButton1"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:textColor="#ffe6ff"
            android:textStyle="bold"/>

        <TextView
            android:text="4/5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/shadowresult"
            android:textSize="50dp"
            android:textColor="#ffb3d1"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="30dp">
    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/parentsvoice"
        android:id="@+id/imageButton2"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

        <TextView
            android:text="Sound Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
            android:textColor="#ffe6ff"
            android:textStyle="bold"/>

        <TextView
            android:text="4/5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundresult"
            android:visibility="invisible"
            android:textSize="50dp"
            android:textColor="#ffb3d1"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />
    </RelativeLayout>
</LinearLayout>